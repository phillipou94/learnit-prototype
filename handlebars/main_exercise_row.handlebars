<a class="exercise-row" href="./exercise.html?id={{ exercise.id }}">
    <div>
        {{#if exercise.completed_problems}}
            {{#if completed }}
                <img class="icon" src="./assets/finished-icon.svg" />
                {{else}}
                <img class="icon" src="./assets/inprogress-icon.svg" />
            {{/if}}
        {{else}}
            <div class="placeholder"> </div>
        {{/if}}
        <div class="title-container">
            <p class="exercise-number">Exercise {{exercise.number}}</p>
            <p class="exercise-title">{{exercise.name}}</p>
        </div>
        {{#if exercise.due_tomorrow}}
            <p class="due-date-tomorrow">Due Tomorrow - {{exercise.due_date}}</p>
        {{else}}
            {{#if exercise.late}}
                <p class="late-due-date">{{exercise.due_date}}</p>
            {{else}}
                <p class="due-date">Due {{exercise.due_date}}</p>
            {{/if}}
            
        {{/if}}
    </div>
</a>

